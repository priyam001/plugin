{
  "manifest_version": 3,
  "name": "Phishing Email Analyzer",
  "version": "1.1",
  "description": "Analyze emails for phishing indicators - Created by Priyam Patel",
  "author": "Priyam Patel",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*", "https://outlook.live.com/*", "https://outlook.office.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Phishing Email Analyzer"
  }
}
